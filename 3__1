
#include <locale.h>
#include <stdio.h>

int num, a, b;

void onenumber()
{
	setlocale(LC_ALL, "RUS");
	puts("Введите первое число");
	scanf("%d", &a);
	printf("Введено число %d\n", a);

}

void twonumbers()
{
	setlocale(LC_ALL, "RUS");
	puts("\nВведите второе число");
	scanf("%d", &b); 
	printf("Введено число %d\n", b);
	printf("Сумма: %d Разница: %d\n Умножение: %d\n Деление: %.2f\n Остаток от деления: %d\n", a + b, a - b, a * b, (float)a / (float)b, a % b);
}

void main()
{
	onenumber();
	getchar();
	twonumbers();
	getchar();

	return 0;
}
